

.list {
  display: flex;
  flex-direction: row;
  padding: 30rpx 30rpx;
  border-bottom: 1px solid #ccc;
}


.left {
  margin-right: 20rpx;
  align-self: center;
  width: 80rpx;
  height: 80rpx;
  line-height: 100%;
  border-radius: 80rpx;
}

.right {
  display: flex;
  align-self: center;
  flex-direction: column;
}

.right-top {
  margin-bottom: 10rpx;
}

.right-bottom {
  color: rgb(170, 170, 170);
}