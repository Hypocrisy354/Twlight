<view class="input">
  <view class="header">{{activity[sportid].sportname}}</view>
  <form action="" bindsubmit="forsubmit">
    <view class="body">
      <view class="list">
        <view class="title">手机号码:</view>
        <input name="account" type="number" placeholder="请输入11位的数字" maxlength="11" />
      </view>
      <view class="list">
        <view class="title">开始时间:</view>
        <input name="startTime"  placeholder="xxxx-xx-xx xx:xx" />
      </view>
      <view class="list">
        <view class="title">结束时间:</view>
        <input name="endTime"  placeholder="xxxx-xx-xx xx:xx" />
      </view>
      <view class="list">
        <view class="title">描述信息:</view>
        <textarea name="caption" show-confirm-bar="false" confirm-type="done" placeholder="描述信息"></textarea>
      </view>
      <button class="sub" form-type="submit" type="primary">提交</button>
    </view>

  </form>
</view>