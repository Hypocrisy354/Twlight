page {
  background-color: #f2f4f6;
}
.publish {
  padding: 10rpx 30rpx;
}
.title {
  height: 160rpx;
  line-height: 160rpx;
  text-align: left;
  font-weight: 700;
  font-size: 60rpx;
}
.tarea {
  width: 100%;
  height: 350rpx;
  padding: 20rpx 0rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.btn {
  margin-top: 100rpx;
}

.add-image {
  width: 160rpx;
  height: 160rpx;
  color: #ddd;
  font-size: 144rpx;
  line-height: 160rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
}

.picture_list {
  padding: 40rpx 0rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  border-bottom: 1px solid #ccc;
}

.picture_item {
  margin: 20rpx 35rpx;
  margin-left: 0;
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.picture_item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #ccc;
}

.picture_item image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
