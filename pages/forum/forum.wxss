page {
  background-color: #f2f4f6;
}

.body {
  padding: 10rpx 30rpx;
}

.tip {
  margin-top: 40rpx;
  padding: 15rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 8rpx 8rpx 10rpx #ccc;
}

.post {
  position: fixed;
  height: 110rpx;
  width: 110rpx;
  bottom: 150rpx;
  right: 70rpx;
  text-align: center;
  line-height: 110rpx;
  background-color: white;
  border-radius: 110rpx;
}

.title {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 70rpx;
}

.userimg {
  height: 70rpx;
  width: 70rpx;
  background-color: skyblue;
  border-radius: 70rpx;
}

.username {
  margin-left: 20rpx;

}

.content {
  padding: 30rpx 0rpx;
  margin-bottom: 16rpx;
  height: 100%;
  line-height: 100%;
  border-top: 1px solid #f2f4f6;
  border-bottom: 1px solid #f2f4f6;
}

.pics {
  margin-bottom: 16rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  border-bottom: 1px solid #f2f4f6;
}

.picture_item {
  margin: 12px;
  margin-left: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.picture_item image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.bottom {
  display: inline;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #aaa;
}

.time {
  float: left;
}

.agree {
  float: right;
  width: 40rpx;
  height: 40rpx;
}

.review {
  float: right;
  margin-left: 20rpx;
}

.clearfix::after {
  content: '';
  display: block;
  /* height: 0; */
  clear: both;
  visibility: hidden;
}